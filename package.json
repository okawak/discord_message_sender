{
  "name": "discord-message-sender",
  "version": "0.1.0",
  "description": "Send messages to Obsidian from Discord.",
  "type": "module",
  "private": true,
  "author": "okawak",
  "license": "MIT",
  "keywords": [
    "obsidian",
    "discord",
    "plugin"
  ],
  "scripts": {
    "wasm:build": "wasm-pack build parse_message --release --target web -d ../pkg",
    "js:bundle": "bunx rolldown -c",
    "wasm:copy": "cpx pkg/parse_message_bg.wasm .",
    "assets:copy": "cpx manifest.json dist && cpx styles.css dist",
    "assets:prepare": "mkdirp dist && cpx pkg/parse_message_bg.wasm dist",
    "dev:build": "bun run wasm:build && bun run wasm:copy && bun run js:bundle",
    "build": "NODE_ENV=production bun run wasm:build && bun run assets:prepare && bun run js:bundle && bun run assets:copy",
    "clean": "rimraf dist main.js *.wasm",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-wasm": "^6.2.2",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "cpx": "^1.5.0",
    "eslint": "^9.27.0",
    "mkdirp": "^3.0.1",
    "obsidian": "^1.8.7",
    "rimraf": "^6.0.1",
    "rolldown": "^1.0.0-beta.8",
    "typescript": "^5.8.3"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}
